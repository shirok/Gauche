  (result (and (SCM_CLOSUREP obj) (== (-> (SCM_CLOSURE obj) env) NULL))))

(define-cproc closure-code (clo::<closure>) (result (-> clo code)))

(define-cproc procedure-info (proc::<procedure>)
  (result (SCM_PROCEDURE_INFO proc)))

