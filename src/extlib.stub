  (let* ([s::ScmSymbol* NULL])
    (cond [(SCM_SYMBOLP name) (set! s (SCM_SYMBOL name))]
          [(SCM_IDENTIFIERP name) (set! s (-> (SCM_IDENTIFIER name) name))]
          [else (SCM_TYPE_ERROR name "symbol or identifier")])
    (result (Scm_ModuleNameToPath s))))

