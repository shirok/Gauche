prefix = @prefix@
exec_prefix = @exec_prefix@
SCM_INSTALL_DIR = @datadir@/gauche/@GAUCHE_VERSION@/lib

SCMS = srfi-0.scm srfi-1.scm srfi-2.scm srfi-11.scm \
       srfi-14.scm srfi-17.scm \
       japanize-euc.scm \
       gauche/object.scm gauche/test.scm gauche/macroutil.scm \
       gauche/process.scm gauche/vm/disasm.scm \
       gauche/serializer.scm gauche/serializer/aserializer.scm \
       rfc/base64.scm

SUBDIRS = gauche gauche/vm gauche/serializer rfc

INSTALL=@INSTALL@

all :

clean :
	rm -f core *~ gauche/*~ gauche/vm/*~ gauche/serializer/*~ rfc/*~

distclean : clean
	rm -f Makefile

realclean : clean
	rm -f Makefile

install : all
	for d in $(SUBDIRS); do \
	  $(INSTALL) -d $(SCM_INSTALL_DIR)/$$d; \
	done
	for f in $(SCMS); do \
	  $(INSTALL) -m 444 $$f $(SCM_INSTALL_DIR)/$$f; \
	done
