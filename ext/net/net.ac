dnl
AC_CHECK_HEADERS(net/if.h,,,[
@%:@ifdef HAVE_SYS_TYPES_H
@%:@include <sys/types.h>
@%:@endif
@%:@include <sys/socket.h>
])
AC_CHECK_TYPES([struct ifreq],,,[
@%:@ifdef HAVE_SYS_TYPES_H
@%:@include <sys/types.h>
@%:@endif
@%:@include <sys/socket.h>
@%:@ifdef HAVE_NET_IF_H
@%:@include <net/if.h>
@%:@endif
])

